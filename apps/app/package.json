{
  "name": "app",
  "version": "0.1.2",
  "scripts": {
    "start": "vite dev --force",
    "dev": "tauri dev",
    "typegen": "cd ../.. && node generate_types.js",
    "build": "vite build",
    "package": "svelte-kit sync && svelte-package && publint",
    "preview": "vite preview",
    "tauri": "tauri",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "description": "A type-safe game engine for roguelikes.",
  "author": {
    "name": "KutayGuler"
  },
  "repository": {
    "url": "https://github.com/KutayGuler/roguelighter",
    "type": "git"
  },
  "keywords": [
    "game engine",
    "roguelike",
    "rpg"
  ],
  "license": "MIT",
  "homepage": "roguelighter.vercel.app",
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.5",
    "@sveltejs/kit": "^2.7.2",
    "@sveltejs/package": "^2.2.2",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/three": "^0.157.2",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.29",
    "publint": "^0.2.5",
    "svelte": "^5.2.4",
    "svelte-check": "^4.0.5",
    "tailwindcss": "^3.4.15",
    "tslib": "^2.4.1",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3",
    "vite": "^5.4.4"
  },
  "type": "module",
  "dependencies": {
    "@tauri-apps/api": "^2.0.3",
    "@tauri-apps/cli": "^2.0.4",
    "@tauri-apps/plugin-fs": "^2.0.1",
    "@tauri-apps/plugin-process": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "json5": "^2.2.3",
    "monaco-tailwindcss": "^0.6.1",
    "roguelighter-core": "0.1.2",
    "svelte-writable-derived": "^3.1.1",
    "tippy.js": "^6.3.7"
  }
}
